<% include ./partials/header.ejs %>
<div class="edit w-full min-h-screen bg-red-100 text-zinc-800 flex justify-center pt-3">
    <div class="form inline-block md:w-1/2 lg:w-1/3 bg-red-100 px-20 py-10">
        <h1 class="text-3xl md:text-4xl leading-none tracking-tighter text-center font-semibold text-zinc-600 mb-6">Edit Profile</h1>
        <form class="space-y-4" action="/register" method="post">
            <div>
                <label class="block text-sm text-zinc-700 mb-1 font-semibold" for="username">Username</label>
                <input id="username" class="block border border-gray-250 border-2 rounded-xl py-2 px-3 w-full hover:bg-gray-50 hover:border-gray-400 focus:bg-gray-50 focus:border-gray-400 focus:outline-none focus:ring focus:ring-blue-300" type="text" name="username" value="<%= user.username %>" required>
            </div>
            <div>
                <label class="block text-sm text-zinc-700 mb-1 font-semibold" for="fullname">Full Name</label>
                <input id="username" class="block border border-gray-250 border-2 rounded-xl py-2 px-3 w-full hover:bg-gray-50 hover:border-gray-400 focus:bg-gray-50 focus:border-gray-400 focus:outline-none focus:ring focus:ring-blue-300" type="text" name="fullname" value="<%= user.name %>" required>
            </div>
            <div>
                <label class="block text-sm text-zinc-700 mb-1 font-semibold" for="email">Email</label>
                <input id="email" class="block border border-gray-250 border-2 rounded-xl py-2 px-3 w-full hover:bg-gray-50 hover:border-gray-400 focus:bg-gray-50 focus:border-gray-400 focus:outline-none focus:ring focus:ring-blue-300" type="email" name="email" value="<%= user.email %>" required>
            </div>
            <div>
                <label class="block text-sm text-zinc-700 mb-1 font-semibold" for="phoneNumber">Phone Number</label>
                <input id="phoneNumber" class="block border border-gray-250 border-2 rounded-xl py-2 px-3 w-full hover:bg-gray-50 hover:border-gray-400 focus:bg-gray-50 focus:border-gray-400 focus:outline-none focus:ring focus:ring-blue-300" type="tel" name="contact" value="<%= user.contact %>" required>
            </div>
            <button type="submit" class="px-3 py-2 mt-3 bg-zinc-600 font-semibold rounded-full text-white hover:bg-zinc-700 focus:bg-zinc-700">Update</button>
        </form>
    </div>
    <div class="captures md:w-1/2 lg:w-fit bg-red-100 px-10 py-10">
        <h1 class="text-3xl md:text-4xl leading-none tracking-tighter text-center font-semibold text-zinc-700 mb-6">Your Captures</h1>
        <div class="captures flex flex-wrap gap-5">
            <% user.posts.forEach(function(post){ %>
                <div class="capture w-[10vw]">
                    <div class="image-container w-auto h-auto rounded-xl bg-red-50 overflow-hidden">
                        <img src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">
                    </div>
                    <p class="text-zinc-800 mt-2 mb-3 text-md font-medium"><%= post.title %></p>
                    <a href="/delete/<%= post._id %>" class="px-3 py-1 font-semibold bg-red-600 text-white rounded-full hover:bg-red-700 focus:bg-red-700">Delete</a>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>
