<% include ./partials/header.ejs %>
<style>
    .image-container {
        position: relative;
        display: inline-block;
    }

    .image-container img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
    }

    .image-container:hover img {
    transform: scale(1.1);
    }
</style>
    <div class="w-full min-h-screen bg-red-100 text-zinc-800 px-10 py-8">
        <div class="cards flex flex-wrap gap-7">
            <% user.posts.forEach(function(elem){ %>
                <div class="card w-32">
                    <div class="image-container w-auto h-auto bg-zinc-400 rounded-xl overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h5 class="text-zinc-800 font-semibold text-md"><%= elem.title %></h5>
                </div>
            <% }); %>
        </div>
    </div>
<% include ./partials/footer.ejs %>