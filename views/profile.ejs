<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-red-100 text-zinc-800 pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-10">
        <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-600">
                <i class="text-white ri-pencil-line"></i>
            </span>
            <div class="w-40 h-40 bg-zinc-400 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover"
                    src="/images/uploads/<%= user.profileImage %>">
            </div>
        </div>
        <h1 class="text-4xl font-semibold tracking-tight mt-3"><%= user.name %></h1>
        <h3 class="text-lg italic font-semibold opacity-90">@<%= user.username %></h3>
        <a href="/edit" class="px-8 py-2 mt-3 bg-zinc-600 font-semibold rounded-full text-white">Edit Your Profile</a>
        <a href="/add" class="px-8 py-2 rounded-full bg-red-600 text-white font-semibold mt-3">Upload Capture</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-600 rounded-lg overflow-hidden shadow-md">
                <a href="/show/posts"><img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>"></a>
            </div>
            <a href="/show/posts" class="inline-block text-xl font-semibold mt-2 tracking-tight">Your Uploaded Captures</a>
            <h5 class="text-sm font-medium opacity-90"><%= user.posts.length %> Captures</h5>
        </div>
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click", function() {
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })
</script>

<% include ./partials/footer.ejs %>